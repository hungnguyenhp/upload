{
    "name": "nguyenanhung/upload",
    "type": "library",
    "description": "Simple Driver for Upload in PHP",
    "keywords": [
        "php",
        "upload"
    ],
    "homepage": "https://github.com/nguyenanhung/upload",
    "license": "MIT",
    "authors": [
        {
            "name": "Nguyen An Hung",
            "email": "dev@nguyenanhung.com",
            "homepage": "https://nguyenanhung.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "monolog/monolog": "^1.23 || ^2.3",
        "codeguy/upload": "^1.3"
    },
    "require-dev": {
        "kint-php/kint": "^3.0",
        "aws/aws-sdk-php": "^3.194"
    },
    "autoload": {
        "psr-4": {
            "nguyenanhung\\Upload\\": "src/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "suggest": {
        "aws/aws-sdk-php": "For S3 Object Upload",
        "google/cloud-storage": "For Google Cloud Storage Upload",
        "microsoft/azure-storage-file": "For Azure Storage File Upload"
    }
}
